<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Puppies" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="sliderStyle">@style/SlideStyle</item>
        <item name="android:statusBarColor" tools:targetApi="l">#d3ad13</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Puppies.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Puppies.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Puppies.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SlideStyle" parent="Widget.MaterialComponents.Slider">
        <item name="haloColor">#000000</item>
        <item name="thumbColor">#000000</item>
        <item name="tickColorActive">#000000</item>
        <item name="tickColorInactive">#222222</item>
        <item name="trackColorActive">#000000</item>
        <item name="trackColorInactive">#222222</item>
    </style>
</resources>